    <ImageView
        android:id="@+id/appleImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/a"
        android:layout_below="@id/textViewOr"

        android:layout_margin="16dp"/>

    -->

</RelativeLayout>
